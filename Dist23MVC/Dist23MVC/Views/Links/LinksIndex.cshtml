@model IEnumerable<Dist23MVC.Models.Links>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="newsArea">
    <table align="center">
        <tr>
            <td>
                <h1>Useful AA related links</h1>
            </td>
        </tr>
        @if (Session["loginName"] != null)
        {
            <tr>
                <td>
                    <h2>Welcome back, @Session["loginName"].ToString()</h2>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Add New", "LinksCreate")
                </td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td class="newsItem">
                    <hr size="5" style="font-weight: bold; background-color: #F4D453; height: 5px;" />
                    <h2>@Html.DisplayFor(modelItem => item.LinkComment)</h2>
                    <a href="@Html.DisplayFor(modelItem => item.linkURL)" target="@Html.DisplayFor(modelItem => item.target)"> @Html.DisplayFor(modelItem => item.LinkText)</a><br />
                    @if (Session["loginName"] != null)
                    {
                    <td>
                        @Html.ActionLink("Edit", "LinksEdit", new { id = item.pKey }) |
                        @Html.ActionLink("Delete", "LinksDelete", new { id = item.pKey })
                    </td>
                    }
                </tr>
        }
    </table>

</div>


