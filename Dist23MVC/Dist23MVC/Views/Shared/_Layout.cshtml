<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/nodrinking.png"/>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo/css")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AA District "  + Session["DistKey"].ToString(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["LoginName"] != null)
                    {
                        <li>@Html.ActionLink("Meetings", "MeetingsEdit", "Meetings")</li>
                    }
                    @if (Session["LoginName"] == null)
                    {
                        <li>@Html.ActionLink("Meetings", "MeetingsIndex", "Meetings")</li>
                    }
                    <li>@Html.ActionLink("Events", "EventsIndex", "Events")</li>
                    <li>@Html.ActionLink("Links", "LinksIndex", "Links")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                    <li>@Html.ActionLink("Service Committees", "CommIndex", "CommHeaders")</li>
                    @if (Session["LoginName"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                    }
                    @if (Session["LoginName"] != null)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                        <li>@Html.ActionLink("Servants", "ContactsIndex", "Contacts")</li>
                        <li>@Html.ActionLink("Groups", "GroupsIndex", "Groups")</li>
                        <li>@Html.ActionLink("Documents", "DocIndex", "Documents")</li>
                        <li><a href="~/updateBanner.aspx" target="_blank">Update Banners</a></li>
                        <li><a href="~/AllServants.aspx" target="_blank">All Servants Demo</a></li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div id="mainpic" class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-9 col-md-7 col-lg-6">
                <h1><strong>@Session["BannerText"].ToString()</strong></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-9 col-md-7 col-lg-6">
                <h2>@Session["BannerSubText"].ToString()</h2>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/Scripts/modernizr")
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/UIscripts")
    @Scripts.Render("~/Scripts/kendo/js")
    @RenderSection("scripts", false)
    @Scripts.Render("~/Scripts/site")
    @RenderSection("inlineScripts", false)
</body>
</html>
