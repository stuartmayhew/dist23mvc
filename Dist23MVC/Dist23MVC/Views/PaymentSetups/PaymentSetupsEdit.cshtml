@model Dist23MVC.Models.PaymentSetupViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PaymentSetup</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.pKey)
        @Html.HiddenFor(model => model.paymentSetup.EventKey)
        @Html.HiddenFor(model => model.paymentSetup.DistKey)

        <div class="form-group">
            @Html.LabelFor(model => model.paymentSetup.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.paymentSetup.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.paymentSetup.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.paymentSetup.hasSpecial, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.paymentSetup.hasSpecial)
                    @Html.ValidationMessageFor(model => model.paymentSetup.hasSpecial, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.paymentSetup.ButtonLink, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.paymentSetup.ButtonLink, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.paymentSetup.ButtonLink, "", new { @class = "text-danger" })
            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.Label("Special Label")
                </th>
                <th>
                    @Html.Label("Special Amount")
                </th>
            </tr>

            @foreach (var item in Model.PaymentSpecValues)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialAmount)
                    </td>
                </tr>
            }
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
    <a href="~/PaymentSpec.aspx" target="_blank">Setup Special Values</a><br />
</div>
