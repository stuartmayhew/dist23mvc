@model Dist23MVC.Models.Documents

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Documents</h4>
        <hr />
            @Html.HiddenFor(model => model.DistKey)


