                <td>
                    <h2>Welcome back, @Session["loginName"].ToString()</h2>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Add New", "EventsCreate")
                </td>
            </tr>
        }



        @if (Model.Where(e => e.EventCat == "D23").Count() > 0)
        {
            <tr>
                <td>
                    <hr size="10" style="font-weight: bold; background-color: #F4D453; height: 10px;" />
                    <h2>District 23 Events</h2>
                    <hr size="10" style="font-weight: bold; background-color: #F4D453; height: 10px;" />
                </td>
            </tr>
            foreach (var item in Model.Where(e => e.EventCat == "D23"))
            {
                <tr>
                    <td class="newsItem">
                        <hr size="2" style="font-weight: bold; background-color: #F4D453; height: 2px;" />
                        <h2>@Html.DisplayFor(modelItem => item.EventName)</h2>
                        <a href="@Html.DisplayFor(modelItem => item.Eventlink)" target="_blank"> @Html.DisplayFor(modelItem => item.EventLinkText)</a><br />
                        @if (Session["loginName"] != null)
                        {
                        <td>
                            @Html.ActionLink("Edit", "EventsEdit", new { id = item.pKey }) |
                            @Html.ActionLink("Delete", "EventsDelete", new { id = item.pKey })
                        </td>
                        }
