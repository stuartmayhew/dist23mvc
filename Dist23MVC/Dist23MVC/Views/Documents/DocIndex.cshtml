@model IEnumerable<Dist23MVC.Models.Documents>

@{
    ViewBag.Title = "Documents";
}

<div class="newsArea">
    <table align="center">
        <tr>
            <td>
                <h1>District @Session["DistKey"].ToString() Documents</h1>
            </td>
        </tr>

        @if (Session["loginName"] != null)
        {
            <tr>
                <td>
                    <h2>Welcome back, @Session["loginName"].ToString()</h2>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Add New", "DocCreate")
                </td>
            </tr>
        }
        @foreach (Dist23MVC.Models.Documents docList in Model)
        {
            <tr>
                <td class="newsItem">
                    <hr size="2" style="font-weight: bold; background-color: #F4D453; height: 2px;" />
                    <h2>@Html.DisplayFor(modelItem => docList.DocInfo)</h2>
                    <a href="@Html.DisplayFor(modelItem => docList.DocLink)" target="_blank"> @Html.DisplayFor(modelItem => docList.DocTitle)</a><br />
                    @if (Session["loginName"] != null)
                    {
                    <td>
                        @Html.ActionLink("Edit", "DocEdit", new { id = docList.pKey }) |
                        @Html.ActionLink("Delete", "DocDelete", new { id = docList.pKey })
                    </td>
                    }
                </tr>
        }
    </table>

</div>

